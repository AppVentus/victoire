<nav id="vic-admin-menu" class="vic-menu-main vic-list-unstyled vic-clearfix vic-navbar-fixed-top" role="navigation">

    {% block header %}
    <div class="vic-navbar-header">
        {% block leftMenu %}
        {% if is_granted('ROLE_VICTOIRE_LEFTNAVBAR') %}
        <div class="vic-trigger vic-pull-left vic-text-center">
            <a class="vic-icon-menu"><i class="fa fa-bars"></i></a>
            <nav class="vic-menu-wrapper">
                <div class="vic-scroller">
                    {#<ul id="vic-menu" class="vic-menu-main vic-list-unstyled vic-clearfix"></ul>#}
                        {{ knp_menu_render('leftnavbar') }}
                </div>

            </nav>
        </div>
        {% endif %}
        {% endblock %}
        {% block brand %}
        <div class="vic-pull-left vic-text-center vic-logo">
            <a href="#"><i class="vic-menuImg vic-menuImg-logo"></i></a>
        </div>
        {% endblock %}
    </div>
    {% endblock %}
    {% block menu_container %}
    <div class="vic-collapse vic-navbar-collapse vic-navbar-responsive-collapse">
        <ul class="vic-userNav">
            {% if page is defined and not page.published %}
            <li class="vic-text-center">
                {% if page.status == constant('Victoire\\Bundle\\PageBundle\\Entity\\BasePage::STATUS_SCHEDULED') %}
                    {% set icon = "clock-o" %}
                    {% set tooltip = "victoire.menu.publication.scheduled.tooltip"|trans({'%publication_date%': page.publishedAt|localizeddate('medium', 'none', null, null, "cccc dd/MM/yyyy Ã  hh'h'mm") }, 'victoire') %}
                {% elseif page.status == constant('Victoire\\Bundle\\PageBundle\\Entity\\BasePage::STATUS_DRAFT') %}
                    {% set icon = "pencil" %}
                {% elseif page.status == constant('Victoire\\Bundle\\PageBundle\\Entity\\BasePage::STATUS_UNPUBLISHED') %}
                    {% set icon = "moon-o" %}
                {% endif %}
                <a href="{{ path('victoire_core_page_settings', {'id' : page.id}) }}" data-toggle="vic-modal"{% if tooltip is defined %}title="{{ tooltip }}"{% endif %}>

                    <i class="fa fa-{{ icon }}"></i>
                </a>
            </li>
            {% endif %}
            <li class="vic-text-center">
                <div class="vic-toggle vic-pull-left">
                    <label class="vic-toggle-radio" for="toggleAdmin2"></label>
                    <input type="radio" name="toggleAdmin" id="toggleAdmin1" value="1" {{ edit_mode ? 'checked="checked"' : ''}}>
                    <label class="vic-toggle-radio" for="toggleAdmin1"></label>
                    <input type="radio" name="toggleAdmin" id="toggleAdmin2" value="0" {{ not edit_mode ? 'checked="checked"' : ''}}>
                </div>
                <div class="vic-toggle-label">{{"victoire_core.edit_mode_switch"|trans({}, 'victoire')}}</div>
            </li>
            <li class="vic-text-center vic-last-child">
                <a href="" class="vic-pull-left">
                    <img src="http://www.gravatar.com/avatar/{{ app.user.email|hash }}?s=35" class="vic-img-circle" alt="avatar">
                </a>
                <a href="{{ path('_logout') }}" class="vic-pull-left"><i class="fa fa-power-off"></i></a>
            </li>
        </ul>

        {% block menu %}
        {{ knp_menu_render('topnavbar') }}
        {% endblock %}

    </div>
    {% endblock %}
</nav>



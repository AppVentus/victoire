namespace {{ namespace }}\Widget\Manager;


{% block use_statements %}
use {{ namespace }}\Form\Widget{{widget}}Type;
use {{ namespace }}\Entity\Widget{{widget}};
{% endblock use_statements %}

{% block class_definition %}
class Widget{{widget}}Manager
{% endblock class_definition %}
{
{% block class_body %}
protected $container;

    /**
     * constructor
     *
     * @param ServiceContainer $container
     */
    public function __construct($container)
    {
        $this->container = $container;
    }

    /**
     * create a new Widget{{widget}}
     * @param Page   $page
     * @param string $slot
     *
     * @return $widget
     */
    public function newWidget($page, $slot)
    {
        $widget = new Widget{{widget}}();
        $widget->setPage($page);
        $widget->setslot($slot);

        return $widget;
    }
    /**
     * render the Widget{{widget}}
     * @param Widget $widget
     *
     * @return widget show
     */
    public function render($widget)
    {
        return $this->container->get('victoire_templating')->render(
            "VictoireWidget{{widget}}Bundle::show.html.twig",
            array(
                "widget" => $widget
            )
        );
    }

    /**
     * render Widget{{widget}} form
     * @param Form           $form
     * @param Widget{{widget}} $widget
     * @param BusinessEntity $entity
     * @return form
     */
    public function renderForm($form, $widget, $entity = null)
    {

        return $this->container->get('victoire_templating')->render(
            "VictoireWidget{{widget}}Bundle::edit.html.twig",
            array(
                "widget" => $widget,
                'form'   => $form->createView(),
                'id'     => $widget->getId(),
                'entity' => $entity
            )
        );
    }

    /**
     * create a form with given widget
     * @param Widget{{widget}} $widget
     * @param string         $entityName
     * @param string         $namespace
     * @return $form
     */
    public function buildForm($widget, $entityName = null, $namespace = null)
    {
        $form = $this->container->get('form.factory')->create(new Widget{{widget}}Type($entityName, $namespace), $widget);

        return $form;
    }

    /**
     * create form new for Widget{{widget}}
     * @param Form           $form
     * @param Widget{{widget}} $widget
     * @param string         $slot
     * @param Page           $page
     * @param string         $entity
     *
     * @return new form
     */
    public function renderNewForm($form, $widget, $slot, $page, $entity = null)
    {

        return $this->container->get('victoire_templating')->render(
            "VictoireWidget{{widget}}Bundle::new.html.twig",
            array(
                "widget"          => $widget,
                'form'            => $form->createView(),
                "slot"            => $slot,
                "entity"          => $entity,
                "renderContainer" => true,
                "page"            => $page
            )
        );
    }
{% endblock class_body %}
}

{
    "name": "{{ orgname }}/{{ widget|lower }}-widget",
    "type": "symfony-bundle",
    "description": "Victoire {{ widget }} widget",
    "keywords": ["victoire", "{{ widget }}", "widget"],
    "homepage": "http://victoire.io",
    "license": "MIT",
    "require": {
        "php"                      : ">=5.3.3",
        "symfony/framework-bundle" : "~2.3",
        "victoire/victoire"        : "dev-master"{% if parent %},
        "{{packagistParentName}}": "dev-master"
{% endif %}
    },
    "autoload": {
        "psr-0": { "Victoire\\Widget\\{{ widget }}Bundle": "" }
    },
    "minimum-stability": "dev",
    "target-dir": "Victoire/Widget/{{ widget }}Bundle"
}

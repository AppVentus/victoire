{
    "name": "victoire/{{ widget|lower }}-widget",
    "type": "symfony-bundle",
    "description": "Victoire DCMS {{ widget }} widget",
    "keywords": ["cms", "victoire", "{{ widget }}", "widget"],
    "homepage": "http://appventus.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Leny BERNARD",
            "email": "leny@appventus.com"
        }
    ],
    "require": {
        "php"                      : ">=5.3.3",
        "symfony/framework-bundle" : "~2.3",
        "victoire/victoire"        : "dev-master"{% if parent %},
        "victoire/{{parent}}-widget": "dev-master"
{% endif %}
    },
    "autoload": {
        "psr-0": { "Victoire\\Widget\\{{ widget }}Bundle": "" }
    },
    "minimum-stability": "dev",
    "target-dir": "Victoire/Widget/{{ widget }}Bundle"
}

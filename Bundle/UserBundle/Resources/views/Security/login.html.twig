{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block meta %}<title>{{ 'layout.login'|trans }}</title>{% endblock meta %}
{% block container_class %}vic-login{% endblock container_class %}
{% block head_style %}
    {% stylesheets filter='less, cssrewrite' injector="victoire-edit"
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}

{% block fos_user_content %}
{% if error %}
    <div data-dev="static" style="
    padding: 15px;
    background: #ae3484;
    color: whitesmoke;
    font-weight: bold;
    font-size: 17px;
    text-align: center;
    text-shadow: 3px 3px 10px #810456;
    border: 2px solid #810456;
">{{ error.message|trans({}, 'victoire') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="vic-form-group -vic-login">
        <label class="vic-hidden" for="username">{{ 'security.login.username'|trans }}</label>
        <input class="vic-form-control -vic-login" placeholder="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="vic-form-group -vic-login">
        <label class="vic-hidden" for="password">{{ 'security.login.password'|trans }}</label>
        <input class="vic-form-control -vic-login" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
        {#
            <p class="vic-help-block">J'ai oubli√© mon <a href="{{ path('fos_user_resetting_request') }}">mot de passe</a></p>
        #}
    </div>

    <div class="vic-form-group -vic-login vic-text-center">
        <input class="customCheckbox -vic-login" type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <button class="vic-btn vic-btn-success vic-btn-block -vic-login" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
</form>
{% endblock fos_user_content %}

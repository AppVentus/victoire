victoire_core:
    widgets:
        {{ theme|lower }}:
            class: "Victoire\\Widget\\{{ bundle }}\\Entity\\Widget{{ widget }}{{ theme }}"
            name: {{ widget|lower ~ theme }}

victoire_theme_{{ widget|lower }}_{{ theme|lower }}:
    name: theme{{ widget|lower }}{{ theme }}
    widgetName: {{ widget|lower }}
    label: {{ widget|lower }}{{ theme }}
    entityClass: {{ namespace }}\Entity\Theme{{ widget ~ theme }}

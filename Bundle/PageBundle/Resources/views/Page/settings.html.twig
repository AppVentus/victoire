{% extends 'VictoireCoreBundle::_modal.html.twig' %}

{% trans_default_domain "victoire" %}

{% form_theme form 'VictoireFormBundle:Form:fields.html.twig' %}

{% block modal_container_classes %}{{ parent() }} vic-page-modal{% endblock modal_container_classes %}

{% block modal_body_content %}

<div class="vic-tab-content vic-modal-tab-content">
    {# Only display this business entity property list when related to a business entity #}
    {% if view.businessEntity %}
        {% include 'VictoireBusinessEntityBundle:BusinessProperty:list.html.twig' with { 'businessProperties': businessProperties } %}
    {% endif %}

    <div class="vic-tab-pane vic-active" id="basics">
        <form method="POST" action="{{path('victoire_core_page_settings', {'id':view.id} )}}">
            <div class="vic-form-group">
                <div class="vic-col-lg-8">
                    {{ form_row(form.title) }}
                    {{ form_row(form.parent) }}
                    {{ form_row(form.template) }}
                    {{ form_row(form.bodyId) }}
                    {{ form_row(form.bodyClass) }}
                    <div class="vic-form-group">
                         <label for="victoire_page_settings_type_bodyClass" class="vic-control-label vic-col-lg-3 control-label vic-optional">
                            {{ 'form.page.type.slug.label'|trans({}, 'victoire') }}
                         </label>
                         <div class="vic-col-lg-9">
                             <table style="width: 100%;">
                                 <tr>
                                     <td>
                                        {{ url('victoire_core_page_show', {'url' : view.url })|replace({(view.slug): ''}) }}
                                     </td>
                                     <td style="width: 100%;">
                                        {{ form_widget(form.slug) }}
                                     </td>
                                 </tr>
                             </table>
                        </div>
                    </div>
                </div>
                <div class="vic-col-lg-4">
                    {{ form_row(form.status) }}
                    <div class="vic-form-group">
                        <div class="publication-date-container{{ form.vars.value.status != constant('Victoire\\Bundle\\PageBundle\\Entity\\BasePage::STATUS_SCHEDULED') ? ' vic-hidden' }}">
                            {{ form_widget(form.publishedAt) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
</div>

<script type="text/javascript">
    $vic('#victoire_page_settings_type_status').on('change', function(){
        if ($vic(this).val() == '{{ constant('Victoire\\Bundle\\PageBundle\\Entity\\BasePage::STATUS_SCHEDULED') }}') {
            $vic('.publication-date-container').removeClass('vic-hidden');
        } else {
            $vic('.publication-date-container').addClass('vic-hidden');
        }
    });
</script>

{% javascripts
    '@VictoireFormBundle/Resources/public/js/datetimepicker-init.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% endblock modal_body_content %}

{% block modal_header_title %}
    {{ 'modal.form.page.settings.title'|trans({'view.name' : view.name}, 'victoire')|desc('%view.name% > Settings') }}
{% endblock modal_header_title %}

{% block modal_footer %}
    <div class="vic-modal-footer">
        <div class="vic-container">
        {% block modal_footer_content %}
            <span class="vic-pull-left"><sup>*</sup>{{ 'modal.mandatory_fields.label'|trans({}, 'victoire')|desc('Mandatory fields') }}</span>
            {% if not view.undeletable %}
            <a href="{{ path('victoire_core_page_delete', {'id': view.id}) }}" class="vic-confirm" data-title="{{ 'modal.form.page.settings.action.delete.confirm.title'|trans({}, 'victoire')|desc('Are you sure ?') }}" data-body="{{ 'modal.form.page.settings.action.delete.confirm.body'|trans({}, 'victoire')|desc('This action can not be undone, do you confirm your action ?') }}" data-modal="delete"></a>
            {% endif %}
            <a href="#" data-modal="{% block action %}update{% endblock action %}" title="{{ 'modal.button.'~ block('action') ~'.title'|trans({}, 'victoire') }}"></a>
        {% endblock modal_footer_content %}
        </div>
    </div>
{% endblock modal_footer %}
